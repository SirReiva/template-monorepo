{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"outDir": "../../dist/server",
		"rootDir": "./src",
		"tsBuildInfoFile": "../../.cache/server.tsbuildinfo",
		"composite": true
	},
	"include": [
		"src"
	],
	"exclude": [
		"test",
		"lib"
	],
	"references": [
		{
			"path": "../common/tsconfig.package.json"
		}
	],
	"scripts": {
		"dev": [
			"tsc-watch",
			"-b ./packages/server/tsconfig.package.json",
			"--verbose",
			"--onSuccess \"node --import=./loader/index.mjs --expose-internals ./dist/server/main.js\""
		]
	}
}
